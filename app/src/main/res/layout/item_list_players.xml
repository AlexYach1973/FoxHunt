<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_list_players_title_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/item_user_name_list_players"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            style="@style/text_user_list"
            tools:text="Aleksey"/>

        <TextView
            android:id="@+id/item_user_number_game_list_players"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            style="@style/text_user_list"
            tools:text="55"/>

        <TextView
            android:id="@+id/item_user_min_number_list_players"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            style="@style/text_user_list"
            tools:text="14"/>

        <TextView
            android:id="@+id/item_user_max_number_list_players"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            style="@style/text_user_list"
            tools:text="31"/>

        <TextView
            android:id="@+id/item_user_mean_number_list_players"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            style="@style/text_user_list"
            tools:text="20.5"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/green_number"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/ll_list_players_title_item"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>